<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FunctionalButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="android:layout_marginRight">0.5dp</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="android:layout_marginRight">0.5dp</item>
    </style>

    <style name="ArithmeticOperationalButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="android:layout_marginRight">0.5dp</item>
    </style>

    <style name="EqualButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="android:layout_marginRight">0.5dp</item>
    </style>

</resources>
